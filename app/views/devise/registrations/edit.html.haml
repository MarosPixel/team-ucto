#change_profile-wrap

  %h2 Edit #{resource_name.to_s.humanize}

  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = f.error_notification

    .inputs
      = f.input :username, required: true, autofocus: true
      = f.input :email, required: true
      = f.input :password, hint: "nechajte políčko prázdne, ak si neprajete zmeniť heslo", required: false
      = f.input :password_confirmation, required: false
      = f.input :current_password, hint: "na potvrdenie zmien je potrebné zadať heslo", required: true

    .actions
      = f.button :submit, "Potvrdiť", class: 'blue'

  = link_to "Back", :back
