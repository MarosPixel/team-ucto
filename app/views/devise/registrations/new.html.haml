#sing_up-wrap.devise

  %h2 Sign up

  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = f.error_notification

    .inputs
      = f.input :username, required: true, placeholder: 'Username'
      = f.input :email, required: true, placeholder: 'Email'
      = f.input :password, required: true, placeholder: 'Password'
      = f.input :password_confirmation, required: true, placeholder: 'Password confirmation'

    .actions
      = f.button :submit, "Sign up", class: 'blue'

  = render partial: "devise/shared/links"
