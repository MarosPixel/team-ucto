%h1
  %span.cseda Show
  mail

%table.show
  %tr
    %th Id:
    %td= @mail.id
  %tr
    %th Imap id:
    %td= @mail.imap_id
  %tr
    %th Received at:
    %td= @mail.received_at
  %tr
    %th Send by:
    %td= @mail.send_by
  %tr
    %th State:
    %td= @mail.state
  %tr
    %th Envelope:
    %td= @mail.envelope
  %tr
    %th Content:
    %td= @mail.content
  %tr
    %th Attachment:
    %td= @mail.attachment
  %tr
    %th File name:
    %td= @mail.file_name
  %tr
    %th Decoded attachment:
    %td= @mail.decoded_attachment
  %tr
    %th Created at:
    %td= @mail.created_at
  %tr
    %th Updated_at
    %td= @mail.updated_at

%p
  = link_to 'Back', emails_path