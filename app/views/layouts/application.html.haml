!!!
%html
  %head
    %title TeamUcto
    = favicon_link_tag
    = stylesheet_link_tag    'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body

    -#%img{src: "/assets/logo.png", height: 100}

    - if user_signed_in?
      
      #header-wrap
        #header
          #top-menu
            -#logo
            = link_to_s 'Home', root_path, 'home'
            = link_to_s 'Expenses', expenses_path, 'expenses'
            = link_to_s 'Participations', participations_path, 'participation'
            - if can? :index, User
              = link_to_s 'Users', users_path, 'users'
            - if can? :index, Audit
              = link_to_s 'Audits', audits_path, 'audit'

            .fright
              %b= current_user.username
              = link_to_s 'My profile', edit_user_registration_path, 'devise/registrations'
              = link_to 'Logout', destroy_user_session_path, method: :delete
            
            .clearfix

    - else
      #header-wrap.not_logged
        #header
          #logo

    #content

      %p#alert= alert
      %p#notice= notice

      = yield

    #footer-wrap
      #footer 
        .fright
          = link_to 'Home', root_path
          |
          = link_to 'Top', '#'
        .fleft
          &copy;2012 team-ucto
        .clearfix
    
